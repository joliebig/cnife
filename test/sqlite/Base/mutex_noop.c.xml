      <expr_stmt><expr><call><name>assert</name><argument_list>( <argument><expr><name>id</name>-2 &lt; (<name>int</name>)(<call><name>sizeof</name><argument_list>(<argument><expr><name>aStatic</name></expr></argument>)</argument_list></call>/<call><name>sizeof</name><argument_list>(<argument><expr><name><name>aStatic</name><index>[<expr>0</expr>]</index></name></expr></argument>)</argument_list></call>)</expr></argument> )</argument_list></call></expr>;</expr_stmt>
